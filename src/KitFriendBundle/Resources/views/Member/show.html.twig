{% extends 'base.html.twig' %}

{% block body %}
    <h1>Member</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Nickname</th>
                <td>{{ member.nickname }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ member.username }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ member.gender }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ member.age }}</td>
            </tr>
            <tr>
                <th>Height</th>
                <td>{{ member.height }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ member.weight }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ member.address }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>{{ member.avatar }}</td>
            </tr>
            <tr>
                <th>Mobile</th>
                <td>{{ member.mobile }}</td>
            </tr>
            <tr>
                <th>Wechat</th>
                <td>{{ member.wechat }}</td>
            </tr>
            <tr>
                <th>Createat</th>
                <td>{% if member.createAt %}{{ member.createAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updateat</th>
                <td>{% if member.updateAt %}{{ member.updateAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Ip</th>
                <td>{{ member.ip }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ member.password }}</td>
            </tr>
            <tr>
                <th>Qq</th>
                <td>{{ member.qq }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('member_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('member_edit', { 'id': member.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
